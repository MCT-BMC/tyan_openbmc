new file mode 100755
index 0000000..11dcccb
--- /dev/null
+++ b/service_files/xyz.openbmc_project.psufaultsensor.service
@@ -0,0 +1,15 @@
+[Unit]
+Description=IPMI defined PSU fault Sensor
+StopWhenUnneeded=false
+After=xyz.openbmc_project.Logging.IPMI.service
+After=obmc-sync-pch-rtc.service
+
+[Service]
+Restart=always
+RestartSec=5
+ExecStartPre=/bin/bash -c 'while [ ! -e /run/time_sync_done ]; do sleep 1; done'
+ExecStart=/usr/bin/env psufaultsensor
+SyslogIdentifier=psufault-sensor
+
+[Install]
+WantedBy=multi-user.target
